<html>
    <Head>
        <Title>History</Title>
        <style>
        li a {
            display: block;
            width: 100%;
            color: #000;
            padding-top: 25px;
            padding-left: 0px;
            text-decoration: none;
            float: top;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 200px;
            background-color:#d18851;
            height: 70%; 
            position: fixed;
            overflow: auto; 
            border-radius: 18px;
        }
          
        li a:hover {
            background-color: #ebc96c;
            color: #d18851;
            height:50px;
        }

          
        li {
            text-align: left;
            height: 15%;
            font-size: 18px;
        }

        .active { background-color: #ebc96c;
                 height:12%
                 }

        .imgcontainer {
            text-align: center;
            margin: 0px 0 0px 0;
            position: fixed;
            overflow: auto;
            height:250px; 
            }

        img.avatar {
            width: 50%;
            height: 100%;
            border-radius: 50%;
            }

            .dropdown {
                float: right;
                overflow: hidden;
              }
              
              .dropdown .dropbtn {
                font-size: 16px;
                border: none;
                outline: none;
                color: white;
                padding-right: 110px;
                background-color: inherit;
                font-family: inherit; 
                margin: 0;
              }
            
              .dropdown-content {
                display: none;
                position: absolute;
                background-color: #afabab;
                min-width: 160px;
                box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                z-index: 1;
                border-radius: 18px;
              }
              
              .dropdown-content a {
                float: none;
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
              }
              
              .dropdown-content a:hover {
                background-color: #ebc96c;
                border-radius: 18px;
              }
              
              .dropdown:hover .dropdown-content {
                display: block;
              }

        </style>
    </Head>
    <Body>
            <div class="imgcontainer">
                        <table style="background-color:#d18851; border-radius:18px;" width="100%">
                            <tr>
                                <td width="20%">
                                    <center>
                                    <img src="crops logo.jpg" alt="Avatar" class="avatar">
                                </center>
                                </td>
                                <td style="font-size:30px;font-family:cursive;">
                                    <b>Online Public Distribution System</b>
                                </td>
                                <td style="padding-right:0px">
                                    <div class="dropdown">
                                        <button class="dropbtn">
                                            <img src="user.png" width="50px" height="50px" style="border-radius:50%;float:right;">
                                        </button>
                                        <div class="dropdown-content">
                                            <a href="http://localhost:4000/">Card Details<img src="card details.png" width="25px" height="25px" align="right" ></a>
                                            <a href="http://localhost:3000/index.html">Log out<img src="logout.webp" width="25px" height="25px" align="right" ></a>
                                        </div>
                                      </div>
                                </td>
                            </tr>
                        </table>
                </div>
           <div style="float:left;padding-top:220px;" width="40%" height="100%">
                    <ul>
                        <li><a href="http://localhost:3000/Homepage.html"><img src="Home.png" width="25px" height="25px" align="center" style="padding-left:30px;"><b>&emsp;Home</b></a></li>
                        <li><a href="http://localhost:3000/Order page.html"><img src="cart.png" width="25px" height="25px" align="center" style="padding-left:30px;"><b>&emsp;Order</b></a></li>
                        <li class="active"><a href="http://localhost:5000/"><img src="History.png" width="25px" height="25px" align="center" style="padding-left:30px;"><b>&emsp;History</b></a></li>
                        <li><a href="http://localhost:3000/feedback.html"><img src="Feedback.png" width="25px" height="25px" align="center" style="padding-left:30px;"><b>&emsp;Feedback</b></a></li>
                    </ul>
            </div>
            <div style="float:right; padding-left:250px; padding-top:400px; padding-right:50px;" width="60%" >
                <table border="1" style="border-collapse:collapse;border-radius:20%;height:20%;width:90%;border-color:black;text-align:center;">
                    <tr style="background-color:#ebc96c;height:10px;">
                       <th width="10%">Card Number</th>
                       <th width="10%">Shop</th>
                       <th width="10%">Shopping Date</th>
                       <th width="10%">Shopping Time</th>
                       <th width="10%">Rice</th>
                       <th width="10%">Wheat</th>
                       <th width="10%">Sugar</th>
                       <th width="10%">Kerosene</th>
                       <th width="10%">Toor Dhal</th>
                       <th width="10%">Urid Dhal</th>
                       <th width="15%">Palm Oil</th>
                       <th width="15%">Salt</th>
                       <th width="15%">GrandTotal</th>
                    </tr>
                    <% OrdersList.forEach(order => {%>
                    <tr style="height:1%;">
                      <td><p><%= order.CardNumber %></p></td>
                      <td><p><%= order.Shop %></p></td>
                      <td><p><%= order.ShoppingDate %></p></td>
                      <td><p><%= order.ShoppingTime %></p></td>
                      <td><p><%= order.Rice %></p></td>
                      <td><p><%= order.Wheat %></p></td>
                      <td><p><%= order.Sugar %></p></td>
                      <td><p><%= order.Kerosene %></p></td>
                      <td><p><%= order.ToorDhal %></p></td>
                      <td><p><%= order.UridDhal %></p></td>
                      <td><p><%= order.PalmOil %></p></td>
                      <td><p><%= order.Salt %></p></td>
                      <td><p><%= order.GrandTotal %></p></td>
                    </tr>
                    <%})%>
                    </table>
                    <br>
                    <br>
                    <br>
            </div>
            
    </Body>
</html>